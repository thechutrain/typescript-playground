{
	"name": "typescript-security-server",
	"version": "1.0.0",
	"description": "",
	"main": "index.js",
	"engines": {
		"node": ">=10.14.1",
		"npm": ">=6.4.1",
		"yarn": ">=1.6.0"
	},
	"scripts": {
		"start": "npm run prod",
		"dev": "npm run rm && npm run build-tsc && concurrently \"tsc -w\" \"cross-env NODE_ENV=\"development\" nodemon dist/index.js\"",
		"prod": "npm run rm && npm run build-tsc && cross-env NODE_ENV=\"production\" node dist/index.js",
		"heroku-postbuild": "npm run build-tsc",
		"deploy:heroku": "cross-env NODE_ENV=\"heroku\" node dist/index.js",
		"rm": "rm -rf dist/",
		"test": "echo \"Error: no test specified\" && exit 1",
		"format": "prettier --write \"src/**\"",
		"tslint": "tslint -c tslint.json -p tsconfig.json",
		"tslint:fix": "tslint -c tslint.json -p tsconfig.json --fix",
		"build-tsc": "tsc",
		"watch-tsc": "tsc -w"
	},
	"keywords": [],
	"author": "",
	"license": "ISC",
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged"
		}
	},
	"lint-staged": {
		"src/*.ts": [
			"npm run format",
			"npm run tslint:fix",
			"git add"
		]
	},
	"dependencies": {
		"cross-env": "^5.2.0",
		"dotenv-safe": "^6.1.0",
		"express": "^4.16.4",
		"morgan": "^1.9.1"
	},
	"devDependencies": {
		"@types/express": "^4.16.0",
		"@types/node": "^10.12.11",
		"concurrently": "^4.1.0",
		"eslint": "^5.9.0",
		"husky": "^1.2.0",
		"lint-staged": "^8.1.0",
		"nodemon": "^1.18.7",
		"prettier": "^1.15.2",
		"tslint": "^5.11.0",
		"tslint-config-prettier": "^1.17.0",
		"tslint-eslint-rules": "^5.4.0",
		"typescript": "^3.2.1"
	}
}
