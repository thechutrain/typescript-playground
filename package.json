{
	"name": "express-security-server",
	"version": "1.0.0",
	"description": "",
	"main": "index.js",
	"engines": {
		"node": ">=10.14.1",
		"npm": ">=6.4.1"
	},
	"scripts": {
		"start": "npm run prod",
		"dev": "cross-env NODE_ENV=development npm run build-tsc && concurrently \"tsc -w\" \"nodemon dist/index.js\"",
		"prod": "cross-env NODE_ENV=production npm run build-tsc && node dist/index.js",
		"heroku-postbuild": "npm run build-tsc",
		"deploy:heroku": "node dist/index.js",
		"rm": "rm -rf dist/",
		"test": "echo \"Error: no test specified\" && exit 1",
		"format": "prettier --write \"src/**\"",
		"lint": "eslint \"src/*.js\" --quiet",
		"lint:fix": "eslint \"src/*.js\" --quiet --fix",
		"build-tsc": "tsc",
		"watch-tsc": "tsc -w"
	},
	"keywords": [],
	"author": "",
	"license": "ISC",
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged"
		}
	},
	"lint-staged": {
		"*.js": [
			"npm run format",
			"npm run lint:fix",
			"git add"
		]
	},
	"dependencies": {},
	"devDependencies": {
		"@types/node": "^10.12.11",
		"concurrently": "^4.1.0",
		"cross-env": "^5.2.0",
		"eslint": "^5.9.0",
		"eslint-config-airbnb": "^17.1.0",
		"eslint-config-prettier": "^3.3.0",
		"eslint-plugin-import": "^2.14.0",
		"eslint-plugin-jsx-a11y": "^6.1.2",
		"eslint-plugin-prettier": "^3.0.0",
		"eslint-plugin-react": "^7.11.1",
		"husky": "^1.2.0",
		"lint-staged": "^8.1.0",
		"nodemon": "^1.18.7",
		"prettier": "^1.15.2",
		"typescript": "^3.2.1"
	}
}
